{
  "appId": "it.airgap.vault",
  "appName": "AirGap Vault",
  "bundledWebRuntime": false,
  "npmClient": "npm",
  "webDir": "www",
  "server": {
    "allowNavigation": [
      "https://github.com/*",
      "https://play.google.com/*",
      "https://airgap.it/*"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchAutoHide": false,
      "androidSplashResourceName": "screen"
    }
  },
  "cordova": {
    "preferences": {
      "cordova.plugins.diagnostic.modules": "CAMERA MICROPHONE"
    }
  }
}
